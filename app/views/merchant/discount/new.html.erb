<h2>New Discount for: <%=@item.name %></h2>
<%= form_tag "/merchant/#{@item.id}/discount", method: :create do %>
  <%= label_tag :minimum_amount %>
  <%= number_field_tag :minimum_amount %>

  <%= label_tag :discount_amount %>
  <%= number_field_tag :discount_amount %>

  <%= submit_tag 'Create New Discount' %>
<% end %>
